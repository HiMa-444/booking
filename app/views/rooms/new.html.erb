<h1>施設登録</h1>
<div class = "form_page">
  <p class = "attention">*は必須項目です</p>
  <% if flash[:nocre]%>
    <%= flash[:nocre]%>
  <% end%>
  <%= form_with model: @room do |r|%>
    <div class = "form">
      <table>
        <tr>
          <th><%= r.label :room_image, "施設画像"%></th>
          <td><%= r.file_field :room_image%></td>
        </tr>
        
        <tr>
          <th class = "need_form"><%= r.label :room_name, "*施設名"%></th>
          <td><%= r.text_field :room_name%></td>
        </tr>
        
        <tr>
          <th class = "need_form"><%= r.label :room_detail, "*施設詳細"%></th>
          <td><%= r.text_field :room_detail%></td>
        </tr>
        
        <tr>
          <th><%= r.label :room_introduce, "施設紹介"%></th>
          <td><%= r.text_field :room_introduce%></td>
        </tr>
        
        <tr>
          <th class = "need_form"><%= r.label :room_much, "*料金/日"%></th>
          <td><%= r.text_field :room_much%></td>
        </tr>
        
        <tr>
          <th class = "need_form"><%= r.label :address, "*住所"%></th>
          <td><%= r.text_field :address%></td>
        </tr>
      </table>
    </div>
    <div class = "submit_buttons">
      <%= r.submit "施設の登録", class: "submit_buttons_child"%>
      <button class = "submit_buttons_child" type = "button" id = "back">戻る</button>
    </div>
  <% end%>
</div>
<script>
  document.getElementById('back').addEventListener('click', function(){
    history.back();
  }, false)
</script>
