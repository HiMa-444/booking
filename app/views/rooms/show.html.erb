<h1>施設詳細</h1>
<% r = @room %>
<table>
  <tr>
    <td>
      <% if r.room_image.attached?%>
        <%= image_tag r.room_image, height: 45%>
      <% else%>
        <%= image_tag 'd-image.png', height: 45%>
      <% end%>
    </td>
  </tr>
  
  <tr>
    <th>施設名</th>
    <td><%= r.room_name%></td>
  </tr>
  
  <tr>
    <th>施設紹介</th>
    <td><%= r.room_introduce%></td>
  </tr>
  
  <tr>
    <th>料金/日</th>
    <td><%= r.room_much%></td>
  </tr>
</table>
<p><%= button_to "施設の予約", reservation_path(r.id), method: :get%></p>
<button id = "back" type = "button">前のページに戻る</button>
<script>
  document.getElementById('back').addEventListener('click', function(){
   history.back();
  }, false)
</script>