<h1>新規登録</h1>
<h3>*は必須項目です</h3>
<% if flash[:no]%>
  <%= flash[:no]%>
<% end%>
<%= form_with model: User.new do |f|%>
  <table>
    <tr>
      <th><%= f.label :image, "プロフィール画像"%></th>
      <td><%= f.file_field :image%></td>
    </tr>
    
    <tr>
      <th><%= f.label :name, "*名前"%></th>
      <td><%= f.text_field :name, required: true%></td>
    </tr>
    
    <tr>
      <th><%= f.label :email, "*メールアドレス"%></th>
      <td><%= f.text_field :email, required: true%></td>
    </tr>
    
    <tr>
      <th><%= f.label :password, "*パスワード"%></th>
      <td><%= f.text_field :password, required: true%></td>
    </tr>
    
    <tr>
      <th><%= f.label :password_confirmation, "*パスワードの再入力"%></th>
      <td><%= f.text_field :password_confirmation, required: true%></td>
    </tr>
    
    <tr>
      <th><%= f.label :introduce, "自己紹介"%></th>
      <td><%= f.text_field :introduce%></td>
    </tr>
  </table>
  <p><%= f.submit "登録"%></p>
  <button><%= link_to "戻る", users_path%></button>
<% end%>