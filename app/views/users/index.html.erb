<% if login_now%>
<%= render 'shared/login'%>

<h1>index</h1>
<button><%= link_to "新規登録", new_user_path%></button>
<p><%= link_to "ログイン", login_path%></p>
<p><%= button_to 'ログアウト', logout_path, method: :delete%></p>
<table>
  <thead>
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>メアド</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |f|%>
      <tr>
        <td><%= f.id%></td>
        <td><%= f.name%></td>
        <td><%= f.email%></td>
      </tr>
    <% end%> 
  </tbody>
</table>
  <h1>login now</h1>
<% else%>
  <%= render 'shared/logout'%>
<% end%>
